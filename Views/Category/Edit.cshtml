@model Category

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
        <div class="mb-3">
			<label asp-for="UAccID"></label>
			<input asp-for="UAccID" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="UAccID"></label>
			<input asp-for="UAccID" class="form-control" />
			<span asp-validation-for="UAccID" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="UAccUsername"></label>
			<input asp-for="UAccUsername" class="form-control" />
			<span asp-validation-for="UAccUsername" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}